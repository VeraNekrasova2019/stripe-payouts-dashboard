{
  "name": "stripe-payouts-backend",
  "version": "1.0.0",
  "description": "Stripe Connect Payouts Dashboard Backend (AWS Lambda)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "build:lambda": "esbuild src/lambda.ts --bundle --platform=node --target=node18 --outfile=dist/lambda.js --external:aws-sdk",
    "deploy": "npm run build:lambda && serverless deploy",
    "test": "vitest",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.525.0",
    "aws-lambda": "^1.0.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "stripe": "^14.21.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.133",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.20.1",
    "eslint": "^8.56.0",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.52.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "keywords": [
    "stripe",
    "payouts",
    "aws-lambda",
    "serverless"
  ],
  "author": "",
  "license": "MIT"
}
